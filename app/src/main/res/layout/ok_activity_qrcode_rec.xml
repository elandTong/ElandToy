<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/ok_activity_qrcode_zxingview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:qrcv_animTime="2500"
        app:qrcv_borderColor="@color/md_white_1000"
        app:qrcv_borderSize="2dp"
        app:qrcv_cornerColor="@color/colorPrimary"
        app:qrcv_cornerLength="20dp"
        app:qrcv_cornerSize="3dp"
        app:qrcv_isShowTipTextAsSingleLine="true"
        app:qrcv_isTipTextBelowRect="true"
        app:qrcv_maskColor="#33FFFFFF"
        app:qrcv_qrCodeTipText="将二维码图片放置到识别框中"
        app:qrcv_rectWidth="250dp"
        app:qrcv_scanLineColor="@color/colorPrimary"
        app:qrcv_scanLineSize="1dp"
        app:qrcv_tipTextMargin="10dp"
        app:qrcv_topOffset="120dp" />

    <com.onlyknow.toy.component.view.OKSEImageView
        android:id="@+id/ok_activity_qrcode_openlight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/ok_light_on" />

    <!-- 顶部操作栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp">

        <com.onlyknow.toy.component.view.OKSEImageView
            android:id="@+id/ok_activity_qrcode_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ok_toolbar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_activity_qrcode"
            android:textColor="@color/md_white_1000"
            android:textSize="20sp" />
    </RelativeLayout>
</RelativeLayout>
